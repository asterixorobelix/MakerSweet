@page
@model MakerSweet.Web.Pages.TSP.TSPCreatorModel
@{
    ViewData["Title"] = "TSPCreator";
    Layout = "~/Pages/_Layout.cshtml";
}

<h2>TSP Creator</h2>

<div>
    <small>Choose the file for which you want to create a TSP file!</small>
</div>
<img class=" image img-responsive" src="https://upload.wikimedia.org/wikipedia/commons/thumb/1/11/GLPK_solution_of_a_travelling_salesman_problem.svg/1200px-GLPK_solution_of_a_travelling_salesman_problem.svg.png" />
<div>
    @Model.Message
</div>
<form asp-action="TSPCreator" method="post">
    <div>
        @Html.LabelFor(x => x.InputFileName) (Currently, only SVG files are supported)
    </div>
    <div>
        @Html.TextBoxFor(x => x.InputFileName, new { @placeholder = Constants.FILE_NAME_PLACEHOLDER, @class = "form-control" })
    </div>
    <div>
        @Html.ValidationMessageFor(x => x.InputFileName)
    </div>
    <div class="btnDiv">
        <button class="btn btn-default" type="submit">Submit</button>
    </div>
</form>
<div class="btnDiv">
    <a class="btn btn-default" href="https://neos-server.org/neos/solvers/co:concorde/TSP.html">NEOS Server</a>
</div>

